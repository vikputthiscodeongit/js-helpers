{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "allowImportingTsExtensions": true,
        "module": "ES2015",
        "moduleResolution": "bundler",
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist/types",
        "verbatimModuleSyntax": true,
        "lib": ["ES2022", "DOM"],
        "target": "ES2022"
    },
    "include": ["src/**/*"]
}

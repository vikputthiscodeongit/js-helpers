{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "include": ["src/**/*"],
    "compilerOptions": {
        "strict": true,
        "module": "ES2015",
        "rewriteRelativeImportExtensions": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "outDir": "dist",
        "verbatimModuleSyntax": true,
        "lib": ["ES2017", "DOM"],
        "target": "ES2017"
    }
}
